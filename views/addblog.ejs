<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.tiny.cloud/1/qyrpjt0a01ek708iq8d4oqx9k74lwoigcqc88pi4gcirwmkx/tinymce/8/tinymce.min.js"
          referrerpolicy="origin"
          crossorigin="anonymous"></script>
   <%- include('./partials/head') %>
    <title>Add New Blog</title>
</head>
<body class="bg-dark text-light">
    <%- include('./partials/nav') %>
    <h1 class="m-4">Add a new blog</h1>
    <div class="container mt-3">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control bg-dark text-light" id="title" name="title" aria-describedby="title">
            </div>
            <div class="mb-3">
                <label for="tiny" class="form-label">Body</label>
                <textarea class="form-control bg-dark text-light" id="tiny" name="body" aria-describedby="body"></textarea>
            </div>
            <div class="mb-3">
  <label for="coverImage" class="form-label">Image</label>
  <input class="form-control bg-dark text-light border-secondary" type="file" name="coverImage"  id="coverImage">
</div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Add</button>
            </div>
        </form>
    </div>
      <script>
    tinymce.init({
    selector: 'textarea#tiny',
    plugins: 'lists',
    toolbar: 'undo redo | formatselect | bold italic | bullist numlist | alignleft aligncenter alignright | outdent indent',
    skin: 'oxide-dark',
    content_css: 'dark',
    content_style: 'body { background-color: #1e1e1e; color: #ffffff; }'
    });
  </script>
    <%- include('./partials/footer')  %>
    <%- include('./partials/scripts') %>
</body>
</html>