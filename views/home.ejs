<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body class="bg-dark text-light">
    <%- include('./partials/nav') %>

<div class="container mt-3">
  <h1 class="mb-4">Blogs</h1>
  <div class="row g-4 justify-content-center">
    <% blogs.forEach(blog => { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="bg-dark text-light border border-secondary card h-100">
          <img src="<%= blog.coverImageURL %>" class="card-img-top img-fluid" alt="Blog cover image">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= blog.title %></h5>
            <p class="card-text"><%= blog.body.split(" ").slice(0, 10).join(" "); %></p>
            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include('./partials/footer')  %>

    <%- include('./partials/scripts') %>
</body>
</html>